<h1>Edit Post!</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="post">
  <div>
    <input
      type="text"
      name="post[title]"
      placeholder="Title"
      value="<%= post.title%>"
    />
  </div>
  <div>
    <input
      type="text"
      name="post[price]"
      placeholder="Price"
      value="<%= post.price%>"
    />
  </div>
  <div>
    <input type="file" name="images" accept="images/*" multiple />
    <div>
      <% post.images.forEach(function(image){ %>
      <img src="<%= image.url %>" alt="" width="100px" />
      <% }) %>
    </div>
  </div>
  <div>
    <textarea name="post[description]" placeholder="Description">
<%= post.description%></textarea
    >
  </div>
  <div>
    <input
      type="text"
      name="post[location]"
      placeholder="Location"
      value="<%= post.location%>"
    />
  </div>
  <input type="submit" value="submit" />
</form>
